{
  "manifest_version": 3,
  "name": "Claude Speech",
  "version": "1.0",
  "description": "",
  "permissions": [],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["mic.svg"],
    "matches": ["https://claude.ai/*"]
  }]
}